@model Item

@{
    ViewData["Title"] = "Create Item";
}
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}
 
<h2 style="display: flex; flex-direction: column; align-items: center;">Nieuw Item Aanmaken</h2>

<form asp-controller="Item" asp-action="CreateItem" method="post" style="display: flex; flex-direction: column; align-items: center;">

    <div class="mb-2" style="width:500px; align-items: center;">
        <label asp-for="Category"><strong>Categorie:</strong></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-2" style="width:500px; align-items: center;">
        <label asp-for="Name"><strong>Naam:</strong></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-2" style="width:500px; align-items: center;">
        <label asp-for="Price"><strong>Prijs (€):</strong></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-2" style="width:500px; align-items: center;">
        <label asp-for="Weight"><strong>Gewicht (kg):</strong></label>
        <input asp-for="Weight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="mb-2" style="width:500px; align-items: center;">
        <label asp-for="DeliveryDays"><strong>Leverdagen:</strong></label>
        <input asp-for="DeliveryDays" class="form-control" />
        <span asp-validation-for="DeliveryDays" class="text-danger"></span>
    </div>

    <div class="mb-2" style="width:500px; align-items: center;">
        <label asp-for="Description"><strong>Beschrijving:</strong></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-2" style="width:500px; align-items: center;">
        <label asp-for="StockQuantity"><strong>Voorraad:</strong></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Aanmaken</button>
    <a asp-controller="Item" asp-action="Index" class="btn btn-secondary" style="margin-top: 200px;">Annuleren</a>

</form>

