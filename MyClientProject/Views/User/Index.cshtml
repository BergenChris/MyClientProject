@model List<Item>

@{
    ViewData["Title"] = "Welkom";
    var user = ViewBag.user as MyClientProject.Models.User;
    var prijs = ViewBag.Price ;
}


<h3>Winkelmandje van @user.Name Totaal @prijs.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"))</h3>

@if (Model != null && Model.Any())
{
    <ul class="list-unstyled" style="display: flex; flex-wrap: wrap; gap: 10px; padding: 0;">
        @* Group items by ItemId and count duplicates *@
        @{
            var groupedItems = Model
            .GroupBy(i => i.ItemId)
            .Select(g => new
            {
                Item = g.First(),
                Quantity = g.Count()
            });
        }

        @foreach (var group in groupedItems)
        {
            var item = group.Item;
            var totaal = 1; // If needed for other calculations

            <li style="list-style-type: none; border: 1px solid #ccc; border-radius: 8px; padding: 15px; width: 250px;">
                <form asp-controller="Shop" asp-action="DeleteItem" method="post" class="d-inline">
                    <input type="hidden" name="itemId" value="@item.ItemId" />

                    <h5>@item.Name</h5>
                    <p><strong>Categorie:</strong> @item.Category</p>
                    <p>
                        <strong>Prijs:</strong>
                        @if (user.Discount > 0)
                        {
                            <span style="color: red; text-decoration: line-through;">
                                @item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"))
                            </span>
                            <span>
                                @((item.Price - (item.Price * user.Discount / 100))
                                    .ToString("C", System.Globalization.CultureInfo.GetCultureInfo("nl-NL")))
                            </span>
                        }
                        else
                        {
                            @item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"))
                        }
                    </p>
                    <p><strong>Gewicht:</strong> @item.Weight kg</p>
                    <p><strong>Levertijd:</strong> @item.DeliveryDays dagen</p>
                    <p><strong>Beschrijving:</strong> @item.Description</p>
                    <p><strong>Aantal:</strong> @group.Quantity stuks</p>

                    <button type="submit" class="btn btn-outline-primary">Verwijder</button>
                </form>
            </li>
        }
    </ul>
    <h2> <a asp-controller="User" asp-action="Order" class="btn btn-primary btn-sm" style="margin-left: 10px; color:darkred">Bestel</a></h2>
}

<h2> <a asp-controller="Shop" asp-action="Index" class="btn btn-secondary btn-sm" style="margin-left: 10px;">Verder winkelen</a></h2>

