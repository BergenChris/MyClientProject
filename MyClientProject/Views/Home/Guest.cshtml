@model User

@{
    ViewData["Title"] = "Create User";
}


<h2 style="display: flex; flex-direction: column; align-items: center;">Gastgebruiker aanmaken</h2>

<form asp-controller="Home" asp-action="CreateGuest" method="post" style="display: flex; flex-direction: column; align-items: center; ">
    <div class="mb-2" style="width:500px;align-items: center;">
        <label asp-for="UserEmail"><strong>E-mailadres:</strong></label>
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>

    <div class="mb-2" style="width:500px;align-items: center;">
        <label asp-for="Name"><strong>Naam:</strong></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <input asp-for="Age" type="hidden" />
    <input asp-for="City" type="hidden" />
    <input asp-for="Country" type="hidden" />
    <input type="hidden" asp-for="Role" value="Guest" />
    <input type="hidden" asp-for="Discount" value="0" />


    <button type="submit" class="btn btn-primary">verdergaan als Gastgebruiker</button>
    <a asp-controller="home" asp-action="Index" class="btn btn-secondary;margin-top:200px;">Annuleren</a>
</form>